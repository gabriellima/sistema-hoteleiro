<h1>Listing hostel_rooms</h1>

<table>
  <tr>
    <th>Price</th>
    <th>Air conditioner</th>
    <th>Fireplace</th>
    <th>Number of rooms</th>
    <th>Balcony</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hostel_rooms.each do |hostel_room| %>
  <tr>
    <td><%= hostel_room.price %></td>
    <td><%= hostel_room.air_conditioner %></td>
    <td><%= hostel_room.fireplace %></td>
    <td><%= hostel_room.number_of_rooms %></td>
    <td><%= hostel_room.balcony %></td>
    <td><%= link_to 'Show', hostel_room %></td>
    <td><%= link_to 'Edit', edit_hostel_room_path(hostel_room) %></td>
    <td><%= link_to 'Destroy', hostel_room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

