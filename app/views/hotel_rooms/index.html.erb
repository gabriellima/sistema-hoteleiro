<h1>Listing hotel_rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Air conditioner</th>
    <th>Fireplace</th>
    <th>Number of rooms</th>
    <th>Balcony</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hotel_rooms.each do |hotel_room| %>
  <tr>
    <td><%= hotel_room.nome %></td>
    <td><%= hotel_room.price %></td>
    <td><%= hotel_room.air_conditioner %></td>
    <td><%= hotel_room.fireplace %></td>
    <td><%= hotel_room.number_of_rooms %></td>
    <td><%= hotel_room.balcony %></td>
    <td><%= link_to 'Show', hotel_room %></td>
    <td><%= link_to 'Edit', edit_hotel_room_path(hotel_room) %></td>
    <td><%= link_to 'Destroy', hotel_room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

